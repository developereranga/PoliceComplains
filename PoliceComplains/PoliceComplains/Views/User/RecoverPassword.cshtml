
@{
    ViewData["Title"] = "RecoverPassword";
}

<div class="row">
    <div class="col-sm"></div>
    <div class="col-sm">
        @{
            if (ViewBag.error != null)
            {
                <p>@ViewBag.error</p>
            }
        }
        <form action="@Url.Action("RecoverPassword","User")" method="post">
            <div class="form-group">
                <label>Email</label>
                <input type="email" class="form-control" name="Email" required>
            </div>
            <input type="submit" class="btn btn-primary" id="btn_submit" value="Get new password">
        </form>

    </div>
    <div class="col-sm"></div>
</div>
